---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import assiniboineImage from '../assets/about/Assiniboine.jpg';
import capeTownImage from '../assets/about/CapeTown.jpg';
import outsideImage from '../assets/about/Outside.jpg';
import triathlonImage from '../assets/about/Triathlon.jpg';
import atTheParkImage from '../assets/about/AtThePark.jpg';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h5>Welcome to my blog :)</h5>
			<Image src={assiniboineImage} alt="Assiniboine Mountain" class="cover-image" />

			<p>
				I'm Sean McCann, an Irish Software Engineer living in Vancouver, Canada.				
			</p>

			<p>
				This blog is a mix of personal and professional content. I talk about Tech, Career Development, Productivity, Personal Finance, Travel and the Great Outdoors.
			</p>

			<h5>Personal Summary</h5>

			<div class="image-gallery">
				<div class="image-column">
					<div class="image-item">
						<p class="image-text">I've lived in Vancouver since 2022</p>
						<Image src={atTheParkImage} alt="At The Park" />
					</div>
					<div class="image-item">
						<p class="image-text">I like a challenge</p>
						<Image src={triathlonImage} alt="Triathlon" />
					</div>
				</div>
				<div class="image-column">
					<div class="image-item">
						<Image src={capeTownImage} alt="Cape Town" />
						<p class="image-text">I've visited 5 continents, so far...</p>
					</div>
					<div class="image-item">
						<Image src={outsideImage} alt="Outside" />
						<p class="image-text">I'm an outdoor enthusiast</p>
					</div>
				</div>
			</div>

			<style>
				.cover-image,
				.image-item img {
					width: 100%;
					border-radius: 8px;
				}
				
				.cover-image {
					border-radius: 12px;
					box-shadow: var(--box-shadow);
				}

				.image-gallery,
				.image-column,
				.image-item {
					display: flex;
					flex-direction: column;
				}
				
				.image-gallery {
					flex-direction: row;
					gap: 20px;
					margin: 20px 0;
				}
				
				.image-column,
				.image-item {
					flex: 1;
					gap: 5px;
				}
				
				.image-text {
					margin: 0;
				}
				
				@media (max-width: 768px) {
					.image-gallery {
						flex-direction: column;
					}
				}
			</style>

		</main>
		<Footer />
	</body>
</html>
